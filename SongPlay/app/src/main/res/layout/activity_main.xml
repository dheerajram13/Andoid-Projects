<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bac"
    tools:context=".MainActivity">

    <TextView
        android:text="To play the song click the button"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/butt1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/butt2"
        android:layout_toStartOf="@+id/butt2"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/butt2"
        android:layout_alignBaseline="@+id/butt1"
        android:layout_alignBottom="@+id/butt1"
        android:layout_alignRight="@+id/input"
        android:layout_alignEnd="@+id/input"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />
01
</RelativeLayout>
